# API Keys
ODDS_API_KEY=your_odds_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sports_model
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL_MODE=disable  # Options: disable, allow, prefer, require, verify-ca, verify-full
DB_SSL_CA=path/to/ca.crt  # Path to SSL certificate if needed

# Application Settings
ENV=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=True

# API Configuration
API_BASE_URL=https://api.the-odds-api.com/v4
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Model Settings
MODEL_VERSION=1.0.0
MODEL_CACHE_DIR=models/cache
MODEL_CHECKPOINT_DIR=models/checkpoints

# Testing
TEST_DB_NAME=sports_model_test
MOCK_API_RESPONSES=True  # Set to False to use real API in tests 