# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyi text diff=python
*.pyw text diff=python
*.ipynb text

# Documentation
*.md text diff=markdown
*.rst text
*.txt text
*.yml text
*.yaml text
*.json text

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Data files
*.csv text
*.tsv text
*.sql text
*.db binary
*.sqlite binary
*.sqlite3 binary

# Binary files
*.pkl binary
*.pickle binary
*.pyc binary
*.pyd binary
*.pyo binary
*.pdb binary
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary

# Jupyter notebook
*.ipynb linguist-documentation

# Documentation
docs/* linguist-documentation
*.md linguist-documentation
LICENSE linguist-documentation

# Generated files
*.generated.* linguist-generated=true
auto_generated/* linguist-generated=true 